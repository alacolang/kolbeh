{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "jetify",
    "fmt": "prettier --write 'src/**/*.ts*'",
    "build-dev": "NODE_ENV=development react-native bundle --platform android --dev true --entry-file index.js   --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/",
    "build": "NODE_ENV=production react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/",
    "codepush-android": "NODE_ENV=production appcenter codepush release-react -d Production -a yassermzh/kolbeh --debug && echo '\nTry: git tag codepush-vXX'",
    "codepush-android-staging": "NODE_ENV=production appcenter codepush release-react -d Staging -a yassermzh/kolbeh --debug && echo '\nTry: git tag codepush-vXX'",
    "codepush-ios": "NODE_ENV=production appcenter codepush release-react -d Production -a yassermzh/kolbeh-ios --debug"
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-community/cli-platform-android": "^4.13.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/slider": "^2.0.9",
    "@react-navigation/bottom-tabs": "^5.9.2",
    "@react-navigation/native": "^5.7.6",
    "@react-navigation/stack": "^5.9.3",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.16",
    "appcenter": "^3.1.2",
    "appcenter-analytics": "^3.1.2",
    "appcenter-crashes": "^3.1.2",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "i18next": "^19.8.1",
    "react": "16.13.1",
    "react-i18next": "^11.7.3",
    "react-native": "0.63.2",
    "react-native-code-push": "^6.3.0",
    "react-native-config": "^1.3.3",
    "react-native-easy-markdown": "^2.0.0",
    "react-native-flipper": "^0.63.0",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-image-zoom-viewer": "^3.0.1",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-reanimated": "^1.13.1",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-screens": "^2.11.0",
    "react-native-sound": "^0.11.0",
    "react-native-splash-screen": "^3.2.0",
    "react-native-svg": "^12.1.0",
    "react-native-swiper": "^1.6.0",
    "react-native-video": "^4.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/runtime": "^7.12.1",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.14",
    "@types/react-native": "^0.63.25",
    "@types/react-native-video": "^5.0.1",
    "@types/react-test-renderer": "16.9.1",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-jest": "^26.5.2",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^25.1.0",
    "jest-fetch-mock": "^3.0.3",
    "metro-react-native-babel-preset": "^0.63.0",
    "pm2": "^4.2.3",
    "prettier": "^2.1.2",
    "react-test-renderer": "16.13.1",
    "rn-async-storage-flipper": "^0.0.9",
    "typescript": "^4.0.3",
    "typescript-styled-plugin": "^0.15.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(png)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
